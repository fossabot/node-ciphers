{
  "name": "node-ciphers",
  "version": "1.1.1",
  "description": "A lightweight Node.js library for AES and DES encryption, offering flexible encoding options, support for various cipher modes, and seamless integration with streams.",
  "license": "MIT",
  "author": "kiki-kanri",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiki-kanri/node-ciphers.git"
  },
  "files": [
    "./dist"
  ],
  "scripts": {
    "build": "ts-project-builder ./src/index.ts --clean --preserve-modules",
    "bumplog": "changelogen --bump",
    "prepack": "pnpm run build",
    "release": "pnpm run build && pnpm run test && changelogen --release && pnpm publish",
    "test": "NODE_OPTIONS=--openssl-legacy-provider jest --coverage"
  },
  "types": "./dist/index.d.ts",
  "dependencies": {
    "type-fest": "^4.26.1"
  },
  "devDependencies": {
    "@kikiutils/changelogen": "^0.6.0",
    "@kikiutils/prettierrc": "^1.3.2",
    "@kikiutils/tsconfigs": "^3.0.1",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.6",
    "consola": "^3.2.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-project-builder": "^3.2.4",
    "tslib": "^2.8.0"
  },
  "keywords": [
    "3des",
    "aes",
    "aes ccm",
    "aes ctr",
    "aes gcm",
    "cbc",
    "cfb",
    "cfb1",
    "cfb8",
    "cipher",
    "decrypt",
    "des",
    "ecb",
    "encrypt",
    "json decrypt",
    "json encrypt",
    "ofb"
  ],
  "engines": {
    "node": ">=18.12.1"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "prettier": "@kikiutils/prettierrc"
}
